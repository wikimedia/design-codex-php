<?xml version="1.0" encoding="UTF-8" ?>
<phpdocumentor configVersion="3" xmlns="https://www.phpdoc.org">
    <title>Codex</title>
    <paths>
        <output>docs</output>
    </paths>
    <version number="3.0">
        <api>
            <source dsn=".">
                <path>src</path>
            </source>
            <ignore hidden="true" symlinks="true">
                <path>src/Utility/MarkupHandler.php</path>
            </ignore>
            <extensions>
                <extension>php</extension>
            </extensions>
            <default-package-name>Codex</default-package-name>
            <include-source>true</include-source>
        </api>
    </version>
    <setting name="template.color" value="codex-blue"/>
    <setting name="guides.enabled" value="false"/>
    <setting name="graphs.enabled" value="false"/>
    <template name=".phpdoc/template" />
</phpdocumentor>
